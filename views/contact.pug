extends base.pug 

block scripts 
    script(src="/static/index.js") 
 
block style 
    style 
        include ../static/style.css
        include ../static/contactstyle.css
block content
    form(action="/contact", method="post") 
        h1 contact us
        div.container
            input(type="text" name="name" class="inputtext" placeholder="Enter your name")
            input(type="tel" name="phone"  class="inputtext" placeholder="Enter your phone no")
            input(type="email" name="email" class="inputtext" placeholder="Enter your email address")
            input(type="text" name="query" class="inputtext" placeholder="Enter your query")
            button(type="submit" id="btn") submit